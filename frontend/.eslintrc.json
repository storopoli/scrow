{
  "extends": "next/core-web-vitals",
  "rules": {
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-explicit-any": "off",
    "react/no-unescaped-entities": [
      "error",
      {
        "allow": ["'"]
      }
    ]
  },
  "ignorePatterns": ["src/lib/*", "src/services/*", "src/types/*", "src/wasm/*"]
}
